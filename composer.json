{
    "name": "star/state-machine",
    "description": "PHP implementation of a configurable State Machine, Workflow, transitions for your domain models",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Yannick Voyer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Star\\Component\\State\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Star\\Component\\State\\": "tests",
            "Star\\Component\\State\\Example\\": "examples"
        }
    },
    "require": {
        "php": ">=8.2",
        "webmozart/assert": "^1.0",
        "symfony/event-dispatcher": "^7.0||^8.0"
    },
    "require-dev": {
        "ext-pdo": "*",
        "doctrine/orm": ">=2.5",
        "infection/infection": "~0.13",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^12.0",
        "squizlabs/php_codesniffer": "^3.2",
        "symfony/cache": ">=7.0",
        "symfony/var-exporter": "^7.0"
    },
    "scripts": {
        "test": "bin/phpunit; bin/phpcs; bin/phpstan; bin/infection"
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
